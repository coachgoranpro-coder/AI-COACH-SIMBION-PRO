export type ExerciseCategory = 
  | 'proprioception'
  | 'speed'
  | 'power'
  | 'strength'
  | 'endurance'
  | 'agility'
  | 'core'
  | 'recovery';

export type BasketballPosition = 'PG' | 'SG' | 'SF' | 'PF' | 'C';

